<h3><a class="btn btn-secondary" href="/student"><i class="fa-solid fa-plus"></i>Create New</a> Students' Record</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Task Description</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{{this.fullName}}}</td>
            <td>{{this.email}}</td>
            <td>{{this.description}}</td>
            <td>
                <a href="/student/{{this._id}}"><i class="fa-solid fa-pencil"></i></a>
                <a href="/student/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this record?');"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>